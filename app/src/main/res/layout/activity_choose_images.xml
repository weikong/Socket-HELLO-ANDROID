<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_activity"
    android:orientation="vertical">

    <com.king.chat.socket.ui.view.actionbar.CommonActionBar
        android:id="@+id/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/margin_1dp"
        android:padding="@dimen/margin_1dp"
        android:numColumns="3"
        android:verticalSpacing="@dimen/margin_1dp">
    </GridView>

</LinearLayout>
