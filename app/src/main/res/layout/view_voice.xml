<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/iv_voice_circle2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_circle_green"/>

    <ImageView
        android:id="@+id/iv_voice_circle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_circle_green"/>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon_video_record"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/color_ffffff"
            android:layout_centerInParent="true"
            android:src="@drawable/umeng_fb_record"/>
    </RelativeLayout>

</RelativeLayout>
