<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/view_top_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@drawable/h20004"/>

        <com.king.chat.socket.ui.view.ImageView.RoundAngleImageView
            android:id="@+id/iv_mine"
            android:layout_width="@dimen/margin_70dp"
            android:layout_height="@dimen/margin_70dp"
            android:layout_marginTop="@dimen/margin_150dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@drawable/icon_cat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_mine"
            android:layout_alignBottom="@+id/iv_mine"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_15sp"
                android:text=""/>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="@dimen/margin_4dp"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_13sp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_focus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_20dp"
            android:layout_below="@+id/iv_mine"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_22dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_huozan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_12sp"
                android:text="-- 获赞"/>

            <TextView
                android:id="@+id/tv_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="-- 关注"/>

            <TextView
                android:id="@+id/tv_fensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="-- 粉丝"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_size_12sp"
            android:layout_below="@+id/layout_focus"
            android:layout_margin="@dimen/margin_10dp"
            android:text="动物是灵性的，不同于植物。 你若孤独，它陪伴你。在阳光的午后，蜷缩在你的臂弯。"/>
    </RelativeLayout>

</LinearLayout>