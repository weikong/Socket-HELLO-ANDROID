<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <include
        android:id="@+id/layout_left"
        layout="@layout/adapter_chat_left"
        android:visibility="gone"/>

    <include
        android:id="@+id/layout_right"
        layout="@layout/adapter_chat_right"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/margin_260dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_6dp"
        android:paddingBottom="@dimen/margin_6dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_item_gray_light"
        android:visibility="gone"/>
</RelativeLayout>
